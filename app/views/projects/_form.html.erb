
<%= render partial: "layouts/error", locals: {object: @project}  %>
<%= form_for([@home, @project]) do |f| %>
  <%= f.label "Project Name:" %>
  <%= f.text_field :name, required: true %><br>
  <% f.hidden_field :home_id %>

    <%= f.fields_for :contractors do |c| %>
    <br>
    Please Select a Contractor: <%= collection_select(:project, :contractor_id, Contractor.all, :id, :name, prompt: "Please select your Contractor from this dropdown") %><br>
    Or, add a new contractor
    <%= c.label :name %>
    <%= c.text_field :name, required: true%>
    <%= c.label :email %>
    <%= c.text_field :email, required: true %>
    
      <% end %>
            
      
    <%= f.submit "Save", class: 'button'%> <%= f.submit "Cancel", class: 'button'%>
  <% end %>
